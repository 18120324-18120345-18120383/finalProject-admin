<!-- Begin Page Content -->
<div class="container-fluid">

  <!-- Page Heading -->
  <h1 class="h3 mb-2 text-gray-800">Carts</h1>

  <!-- DataTales Example -->
  <div class="card shadow mb-4">
    <div class="card-header py-3">
      <div class="row">
        <div class="col-sm-11">
          <h6 class="m-0 font-weight-bold text-primary">{{typeOfCarts}}</h6>
        </div>
      </div>

      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-bordered" id="booksTable" width="100%" cellspacing="0">
            <thead>
              <tr>
                <th>
                  <input type="text" class="form-control" placeholder="Name" id="filterName">
                </th>
                <th>
                  <input type="text" class="form-control" placeholder="Name" id="filterName">
                </th>
                <th>
                  <select id="filterCategory" class="form-control" name="category">
                    <option value="">All categories</option>
                    <option value="hello">Hello</option>
                  </select>
                </th>
                <th style="width: 20%;">
                  <input type="text" class="form-control half left" placeholder="min" id="filterMinPrice">
                  <input type="text" class="form-control half right" placeholder="max" id="filterMaxPrice">
                </th>
                <th>
                  <div class="d-flex justify-content-center">
                    <button class="btn btn-dark btn-xs btn-filter " id="btnFilterBook">Filter</button>
                  </div>
                </th>
              </tr>
              <tr>
                <th width="20%">ID</th>
                <th width="20%">Order Date</th>
                <th width="30%">Address</th>
                <th width="20%">Total Price</th>
                <th width="10%">Detail</th>
              </tr>
            </thead>
            <tfoot>
              <tr>
                <th width="20%">ID</th>
                <th width="20%">Order Date</th>
                <th width="30%">Address</th>
                <th width="20%">Total Price</th>
                <th width="10%">Detail</th>
              </tr>
            </tfoot>
            <tbody id="bodyBooksTable">
              {{#each carts}}
              <tr>
                <td width="20%">{{_id}}</td>
                <td width="20%">{{orderDate}}</td>
                <td width="30%">{{fullAddress}}</td>
                <td width="20%">{{total}}</td>
                <td width="10%">
                  <button onclick="detailOfCart()" type="button" class="btn btn-link">Detail</button>
                  <script>
                    const detailOfCart = () => {
                      window.open("https://www.google.com");
                    }
                  </script>
                </td>
              </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  <!-- /.container-fluid -->

</div>
<!-- End of Main Content -->
<script src="js/filterBooks.js"></script>